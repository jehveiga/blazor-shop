@page "/carrinho/compra"

@if (CarrinhoCompraItens == null && MensagemErro == null)
{
    <ExibirSpinner />
}
else if (MensagemErro != null)
{
    <ExibirErro MensagemErro="@MensagemErro"></ExibirErro>
}
else
{
    <h3 class="mb-5">Carrinho</h3>
    @if (CarrinhoCompraItens.Count() > 0)
    {
        <div class="row mb-5">
            <div class="col-md-9">
                @foreach (var item in CarrinhoCompraItens)
                {
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <img src="@item.ProdutoImagemURL" width="250" class="img-thumbnail">
                        </div>
                        <div class="col-md-9">
                            <h5>@item.ProdutoNome</h5>
                            <div class="mb-4">
                                @item.ProdutoDescricao
                            </div>
                            <span>
                                Preço: <b>@item.Preco.ToString("C")</b>
                                <br>
                                <button class="btn btn-danger sm mt-1" @onclick="(() => DeletaCarrinhoItem_Click(item.Id))">
                                    <i class="bi bi-trash-fill"></i>
                                </button>
                            </span>
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-3">
                <h5>Carrinho - Resumo</h5>
                <div class="mt-2">
                    <div>Total</div>
                    <a href="#" class="btn btn-success mt-2">
                        <span class="oi oi-credit-card"></span>&nbsp; Fechar Pedido
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div>
            <h3><b>Seu carrinho esta vazio</b></h3>
        </div>
    }
}


@code {

    [Inject]
    public ICarrinhoCompraService? CarrinhoCompraService { get; set; }

    public List<CarrinhoItemDto> CarrinhoCompraItens { get; set; } = new();

    public string? MensagemErro { get; set; }

    protected override async Task OnInitializedAsync()
    {
        try
        {


            CarrinhoCompraItens = await CarrinhoCompraService.GetItens(UsuarioLogado.UsuarioId);
        }
        catch (Exception)
        {

            throw;
        }
    }

    #region DeleteItemCarrinho

    protected async Task DeletaCarrinhoItem_Click(int id)
    {
        // Excluir o item do banco de dados
        var carrinhoItemDto = await CarrinhoCompraService.DeletaItem(id);

        // Remoção do item da coleção de objetos da memoria no cliente
        await RemoveCarrinhoItem(id);
    }

    // Obter o item na coleção em memoria
    private CarrinhoItemDto GetCarrinhoItem(int id)
    {
        return CarrinhoCompraItens.FirstOrDefault(item => item.Id == id);
    }

    // Deletando o item na coleção em memoria
    private async Task RemoveCarrinhoItem(int id)
    {
        var carrinhoItemDto = GetCarrinhoItem(id);
        CarrinhoCompraItens.Remove(carrinhoItemDto);
    }

    #endregion

}
